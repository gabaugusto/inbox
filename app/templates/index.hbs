<section>
    {{#unless messages.length}}
        <article class="empty-page-wrapper">
            <div class="inbox-empty-page-wrapper">
                <div class="inbox-content">
                    <span>Pin important emails so that you can quickly access them whenever you want.</span>
                    <button>GOT IT</button>
                </div>
            </div>
        </article>
        {{else}}
            {{#each messageGroups as |group|}}
                <article class="wrapper">
                    <div class="header">
                        <div class="time">{{group.chunk}}</div>
                        <div class="action">
                            <button>
                                <i class="fa fa-check fa-lg"></i>
                            </button>
                        </div>
                    </div>
                    {{#each group.messages as |message|}}
                        {{mail-item
                            mail = message
                            showSnooze = "showSnooze"
                            showSettings = "showSettings"
                            isSelected = globalSelect
                            setSelected = "onSelectionChange"
                            onUpdate = "updateMessagePin"
                        }}
                    {{/each}}
                </article>
            {{/each}}
    {{/unless}}
</section>