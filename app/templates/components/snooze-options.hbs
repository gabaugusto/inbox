<div class="snooze-container">
    <a href="#" {{action "openMenu"}}>
        <i class="fa fa-clock-o"></i>
    </a>
    {{#if isOpen}}
        <div class="actions-modal">
            <div class="actions-header">
                <h3 class="actions-header-title">Snooze untill...</h3>
            </div>
            <div class="actions-body">
                <ul class="actions-list">
                    <li class="action-item">
                        <a href="#"><i class="fa fa-cog"></i>Tomorrow</a>
                    </li>
                    <li class="action-item">
                        <a href="#"><i class="fa fa-suitcase"></i>Later this week</a>
                    </li>
                    <li class="action-item">
                        <a href="#"><i class="fa fa-briefcase"></i>This weekend</a>
                    </li>
                    <li class="action-item">
                        <a href="#"><i class="fa fa-inbox"></i>Next week</a>
                    </li>
                    <li class="action-item">
                        <a href="#"><i class="fa fa-bullseye"></i>Someday</a>
                    </li>
                </ul>
            </div>
            <div class="actions-footer">
                <a class="action-item" href="#" ca><i class="fa fa-calendar-o"></i>Pick a date</a>
                <a class="action-item" href="#" ca><i class="fa fa-map-marker"></i>Pick a place</a>
            </div>
        </div>
    {{/if}}
</div>